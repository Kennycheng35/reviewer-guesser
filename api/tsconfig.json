{
    "compilerOptions": {
      "allowJs": true,
      "checkJs": false,
      "target": "es2020",
      "module": "NodeNext",             // Tell TSC to output Node.js compatible ESM
      "moduleResolution": "NodeNext",    // Use modern Node.js module resolution
      "outDir": "./dist",
      "rootDir": ".",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true
    },
    "include": [
      "./**/*.ts" // Or be more specific if needed
    ],
    "exclude": [
      "node_modules",
      "dist" // Exclude the output directory
    ]
}