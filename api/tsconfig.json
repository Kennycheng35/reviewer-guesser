{
    "compilerOptions": {
      "allowJs": true,
      "checkJs": false,
      "target": "es2020",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./dist",
      "rootDir": ".",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true
    },
    "include": [
      "./**/*.ts" // Or be more specific if needed
    ],
    "exclude": [
      "node_modules",
      "dist" // Exclude the output directory
    ]
}